{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // for monorepo
    "baseUrl": ".",
    "paths": {
      "@components/*": ["apps/client/src/components/*"],
      "@pages/*": ["apps/client/src/pages/*"],
      "@graphql/*": ["apps/client/src/graphql/*"],
      "@models/*": ["apps/server/src/models/*"],
      "@accessLayer/*": ["apps/server/src/access-layer/*"],
      "@resolvers/*": ["apps/server/src/resolvers/*"]
    }
  }
}
