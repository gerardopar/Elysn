{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    // for monorepo
    "baseUrl": ".",
    "paths": {
      "@elysn/shared": ["packages/shared/src"],
      "@elysn/shared/*": ["packages/shared/src/*"],
      "@components/*": ["apps/client/src/components/*"],
      "@pages/*": ["apps/client/src/pages/*"],
      "@graphql/*": ["apps/client/src/graphql/*"],
      "@hooks/*": ["apps/client/src/hooks/*"],
      "@stores/*": ["apps/client/src/stores/*"],
      "@layout/*": ["apps/client/src/layout/*"],
      "@helpers/*": ["apps/client/src/helpers/*"]
    }
  }
}
