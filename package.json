    "axios": "^1.11.0",
    "firebase-admin": "^13.5.0",
    "graphql-subscriptions": "^3.0.0",
    "graphql-ws": "^6.0.6",
    "mongodb": "^6.19.0",
    "mongoose": "^8.18.1",
    "openai": "^6.0.1",
    "redis": "^5.8.2",
    "zod": "^4.1.5"
  },
